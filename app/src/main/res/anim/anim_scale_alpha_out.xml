<?xml version="1.0" encoding="utf-8"?>
<!-- 出去动画 -->
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:duration="2000"
        android:fillAfter="true"
        android:fromAlpha="1"
        android:toAlpha="0" />

    <scale
        android:duration="2000"
        android:fillAfter="true"
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="0%"
        android:pivotY="100%"
        android:toXScale="1"
        android:toYScale="0" />

</set>
